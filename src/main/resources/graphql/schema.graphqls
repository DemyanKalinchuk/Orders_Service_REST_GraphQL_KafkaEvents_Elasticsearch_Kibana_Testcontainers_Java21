schema {
    query: Query
    mutation: Mutation
}


type Query {
    order(id: ID!): Order
    orders: [Order!]!
}


type Mutation {
    createOrder(input: CreateOrderInput!): Order!
}


type Order {
    id: ID!
    customerEmail: String!
    amount: Float!
    status: OrderStatus!
    createdAt: String!
}


enum OrderStatus { CREATED PAID CANCELLED }


input CreateOrderInput {
    customerEmail: String!
    amount: Float!
}